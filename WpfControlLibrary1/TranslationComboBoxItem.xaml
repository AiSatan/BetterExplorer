<UserControl x:Class="BetterExplorerControls.TranslationComboBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="40" Width="170">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17"/>
            <RowDefinition Height="17"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="6,0,0,0" Name="LanguageTextBlock" Text="Language (i.e. English)" FontWeight="Bold" Height="16" VerticalAlignment="Center" />
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="6,0,0,0" Name="LocaleTextBlock" Text="Locale Code (i.e. en-US)" VerticalAlignment="Center" HorizontalAlignment="Left" Width="125" />
        <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" x:Name="LangFlag" Height="11" Width="16"/>
    </Grid>
</UserControl>
